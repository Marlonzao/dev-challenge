.page-header
    h1 Create ToDo Item
form.form-horizontal(ng-submit='submit()')
    .row
        .col-sm-6
            .form-group
                label.control-label.col-sm-4(for='description') Name
                .col-sm-8
                    input#description.form-control(type='text' focus-on='focusMe' ng-model='todoItem.name')
            .form-group
                label.control-label.col-sm-4(for='category') Category
                .col-sm-8
                    input#category.form-control(type='text' ng-model='todoItem.category')
            .form-group
                label.control-label.col-sm-4(for='complete') Complete?
                .col-sm-8
                    input#complete.form-control(type='text' ng-model='todoItem.complete')
        .col-sm-6
            .form-group
                label.control-label.col-sm-4(for='dueBy') Due by
                .col-sm-8
                    input#dueBy.form-control(type='text' ng-model='todoItem.dueBy')
            .form-group
                label.control-label.col-sm-4(for='cost') Cost
                .col-sm-8
                    input#cost.form-control(type='text' ng-model='todoItem.cost')
            .form-group
                label.control-label.col-sm-4(for='notes') Notes
                .col-sm-8
                    textarea#notes.form-control(ng-model='todoItem.notes' bs-tooltip='' data-title='Any additional information about the todo item.' data-trigger='focus' data-placement='bottom')
    .form-group.well
        .col-sm-offset-2.col-sm-10
            input.btn.btn-primary(type='submit' value='Create')
